<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.mikevane.covid.mapper.StudentMapper">

    <resultMap id="BaseResultMap" type="com.mikevane.covid.entity.Student">
            <id property="id" column="id" jdbcType="INTEGER"/>
            <result property="username" column="username" jdbcType="VARCHAR"/>
            <result property="userId" column="user_id" jdbcType="INTEGER"/>
            <result property="createTime" column="create_time" jdbcType="TIMESTAMP"/>
            <result property="updateTime" column="update_time" jdbcType="TIMESTAMP"/>
    </resultMap>

    <sql id="Base_Column_List">
        id,username,user_id,
        create_time,update_time
    </sql>

    <update id="updateByStudent" parameterType="com.mikevane.covid.entity.Student">
        update student
        <set>
            <if test="student.address != null">
                address = #{student.address}
            </if>
            <if test="student.gradeClass != null">
                , grade_class = #{student.gradeClass}
            </if>
            <if test="student.updateTime != null">
                , update_time = #{student.updateTime}
            </if>
        </set>
        where id = #{student.id}
    </update>
</mapper>
